@model IEnumerable<Desafio_MVC.Models.Vaga>

<script>
    $(document).ready( function () {
    $('#vagas').DataTable();
    } );
</script>

<h1>Vagas</h1>
<hr/>
<table id="vagas" class="table table-striped table-bordered table-primary">
    <thead class="thead-light">
        <tr>
            <th>Projeto</th>
            <th>Descrição da Vaga</th>
            <th>Tecnologias</th>
            <th>Abertura da Vaga</th>
            <th>Quantidade de Vagas</th>
            <th>Código da Vaga</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var vaga in Model)
        {
            <tr>
                <td>@vaga.Projeto</td>
                <td>@vaga.Descricao_Vaga</td>
                <td>
                    <form asp-action="Deletar" asp-controller="Vagas" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@vaga.Id">
                        <button class="btn btn-sm btn-danger">Deletar</button>
                    </form>
                </td>
                <td>@vaga.Abertura_Vaga.ToString("dd/MM/yyyy")</td>
                <td>@vaga.Qtd_Vaga</td>
                <td>@vaga.Codigo_Vaga</td>
            </tr>
        }
    </tbody>
</table>

<hr/>
<a asp-controller="Vagas" asp-action="Cadastrar"><button class="btn btn-primary" style="display:block;margin:0 auto;">Cadastrar Vaga</button></a>