@model Desafio_MVC.DTO.FuncionarioDTO;

<h1>Cadastro de Funcionário</h1>
<hr/>

<form class="form-horizontal" asp-controller="Funcionarios" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value="0">
    
    <label asp-for="Nome">Nome</label>
    <input class="form-control" type="text" asp-for="Nome" placeholder="Nome do Funcionário"><br>
    <span asp-validation-for="Nome"></span>
    
    <label asp-for="Matricula">Matricula</label>
    <input class="form-control" type="text" asp-for="Matricula" placeholder="000000"><br>
    <span asp-validation-for="Matricula"></span>

    <label asp-for="Cargo">Cargo</label>
    <input class="form-control" type="text" asp-for="Cargo" placeholder="Analista, Desenvolvedor, Gestor"><br>
    <span asp-validation-for="Cargo"></span>

    <label asp-for="Gft_Id">Local de Trabalho</label>
    <select class="form-control" asp-for="Gft_Id" asp-items='@(new SelectList(@ViewBag.Gfts,"Id","Nome"))'></select>

    <hr/>
    <button class="btn btn-primary">Cadastrar</button>
</form>